<div class="container">
    <br />
    <br />

    <div class="row"id="box">
        <!--open payment form-->
        <form class="col s12">
            <!--open username input-->
            <div class="row">
                <div class="input-field col s10">
                    <input placeholder="To:" title="Enter a friend's username" id="username" type="text" class="validate">
                </div>
                <div class="col s2"></div>
            </div>
            <!--close username input-->
            <!--open amount & buttons input-->
            <div class="row">
                <div class="col s5 input-field">
                    <!--update the currency input to materialize theme-->
                    <input placeholder="$" id="amount" type="number">
                </div>
                <div class="col s2"></div>
                <div class="col s5">
                    <a class="btn" title="Send Payment">Pay</a>
                    <a class="btn" title="Send Request">Request</a>
                </div>
            </div>
            <!--close amount & buttons input-->
        </form>
        <!--close payment form-->
    </div>
    <!--open recent transactions card-->
    <div class="row">
        <div class="col s12">
            <div class="card transactions-card">
                <div class="card-content">
                    <span class="card-title">Recent Transactions</span> {{#each transactions}}
                    <p>{{name}} {{transaction}} {{amount}} to {{newUser}}</p>
                    {{/each}}
                    <!--example recent transaction-->
                    <p class="transaction">Bridgete paid $75 to Art</p>
                </div>
            </div>
        </div>
    </div>
    <!--close recent transactions card-->
</div>
